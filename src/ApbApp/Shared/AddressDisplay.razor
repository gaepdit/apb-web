@using Apb.Domain.ValueObjects

@if (Address is null)
{
    <div>
        <em>None</em>
    </div>
}
else
{
    <div class="text-nowrap" aria-label="Postal address">
        @Address.Street
        @if (!string.IsNullOrWhiteSpace(Address.Street2))
        {
            <br />
            @Address.Street2
        }
        <br />
        @Address.City, @Address.State @Address.PostalCode
    </div>
}

@code {
    [Parameter]
    public Address? Address { get; set; }
}